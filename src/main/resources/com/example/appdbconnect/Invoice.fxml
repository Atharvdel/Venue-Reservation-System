<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appdbconnect.InvoiceController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0056b3;" text="Reservation Confirmed!" textAlignment="CENTER"/>

    <Label fx:id="reservationNumberLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="venueDetailsLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="totalAmountLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="advancePaymentLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="dueDateLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="reservationDateLabel" style="-fx-font-size: 16px;"/> <!-- New label for reservation date -->
    <Label fx:id="dateTimeLabel" style="-fx-font-size: 16px;"/>

    <Button text="Close" onAction="#onCloseButtonClick" style="-fx-font-size: 14px; -fx-padding: 5px 20px; -fx-background-color: #0056b3; -fx-text-fill: white;" />
</VBox>